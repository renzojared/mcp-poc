{
  "openapi": "3.0.4",
  "info": {
    "title": "Invoice.Sync.Host",
    "version": "1.0"
  },
  "paths": {
    "/api/v1/event": {
      "post": {
        "tags": [
          "Events"
        ],
        "summary": "Create a new event",
        "description": "Creates a new event for processing and delivery to subscribers",
        "operationId": "CreateEvent",
        "parameters": [
          {
            "name": "Application-Name",
            "in": "header",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "allOf": [
                  {
                    "$ref": "#/components/schemas/CreateEventRequest"
                  }
                ]
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/CreateEventResponse"
                }
              }
            }
          },
          "400": {
            "description": "Bad Request",
            "content": {
              "application/problem+json": {
                "schema": {
                  "$ref": "#/components/schemas/HttpValidationProblemDetails"
                }
              }
            }
          },
          "500": {
            "description": "Internal Server Error",
            "content": {
              "application/problem+json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized"
          }
        }
      }
    },
    "/api/v1/event/{id}": {
      "get": {
        "tags": [
          "Events"
        ],
        "summary": "Get event processing information",
        "description": "Returns event status and all delivery attempts grouped by target endpoint",
        "externalDocs": {
          "description": "GUID Converter Tool - Helper for binary format conversion",
          "url": "https://toolslick.com/conversion/data/guid"
        },
        "operationId": "GetEventById",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/EventProcessSummary"
                }
              }
            }
          },
          "404": {
            "description": "Not Found"
          },
          "400": {
            "description": "Bad Request",
            "content": {
              "application/problem+json": {
                "schema": {
                  "$ref": "#/components/schemas/HttpValidationProblemDetails"
                }
              }
            }
          },
          "500": {
            "description": "Internal Server Error",
            "content": {
              "application/problem+json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/subscription": {
      "post": {
        "tags": [
          "Subscriptions"
        ],
        "summary": "Create a new event subscription",
        "description": "Creates a new subscription to receive event notifications at the specified callback URL",
        "operationId": "CreateSubscription",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "allOf": [
                  {
                    "$ref": "#/components/schemas/CreateSubscriptionRequest"
                  }
                ]
              }
            }
          },
          "required": true
        },
        "responses": {
          "201": {
            "description": "Created"
          },
          "400": {
            "description": "Bad Request",
            "content": {
              "application/problem+json": {
                "schema": {
                  "$ref": "#/components/schemas/HttpValidationProblemDetails"
                }
              }
            }
          },
          "500": {
            "description": "Internal Server Error",
            "content": {
              "application/problem+json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized"
          }
        }
      }
    },
    "/api/v1/subscription/{eventType}": {
      "get": {
        "tags": [
          "Subscriptions"
        ],
        "summary": "Get subscriptions by event type",
        "description": "Retrieves a paginated list of subscriptions filtered by event type",
        "operationId": "GetSubscriptionsByEventType",
        "parameters": [
          {
            "name": "eventType",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "PageNumber",
            "in": "query",
            "schema": {
              "type": "integer",
              "format": "int32",
              "default": 1
            }
          },
          {
            "name": "PageSize",
            "in": "query",
            "schema": {
              "type": "integer",
              "format": "int32",
              "default": 10
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/SubscriptionDetailPaginatedList"
                }
              }
            }
          },
          "400": {
            "description": "Bad Request",
            "content": {
              "application/problem+json": {
                "schema": {
                  "$ref": "#/components/schemas/HttpValidationProblemDetails"
                }
              }
            }
          },
          "500": {
            "description": "Internal Server Error",
            "content": {
              "application/problem+json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "ClauseOperator": {
        "enum": [
          "Equals",
          "NotEquals",
          "Contains",
          "NotContains",
          "StartsWith",
          "EndsWith",
          "IsEmpty",
          "IsNotEmpty",
          "GreaterThan",
          "GreaterThanOrEqual",
          "LessThan",
          "LessThanOrEqual",
          "Between",
          "IsTrue",
          "IsFalse",
          "IsNull",
          "IsNotNull",
          "ContainsAny",
          "AnyEquals",
          "AnyGreaterThan",
          "AllEquals",
          "AllGreaterThan",
          "ArrayLengthEquals",
          "ArrayLengthGreaterThan",
          "ArrayNotEmpty",
          "ArrayIsEmpty",
          "AnyGreaterThanOrEqual",
          "AnyLessThan",
          "AnyLessThanOrEqual",
          "AllGreaterThanOrEqual",
          "AllLessThan",
          "AllLessThanOrEqual"
        ],
        "type": "string"
      },
      "CreateEventRequest": {
        "type": "object",
        "properties": {
          "requestId": {
            "type": "string"
          },
          "timeStamp": {
            "type": "string",
            "format": "date-time"
          },
          "eventType": {
            "type": "string"
          },
          "payload": { }
        },
        "additionalProperties": false
      },
      "CreateEventResponse": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid"
          }
        },
        "additionalProperties": false
      },
      "CreateSubscriptionRequest": {
        "type": "object",
        "properties": {
          "eventType": {
            "type": "string"
          },
          "callbackUrl": {
            "type": "string"
          },
          "maxRetries": {
            "type": "integer",
            "format": "int32"
          },
          "timeoutInSeconds": {
            "type": "integer",
            "format": "int32"
          },
          "clauses": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/SubscriptionClause"
            },
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "DeliveryAttempt": {
        "type": "object",
        "properties": {
          "status": {
            "allOf": [
              {
                "$ref": "#/components/schemas/DeliveryStatus"
              }
            ]
          },
          "statusCode": {
            "type": "integer",
            "format": "int32"
          },
          "timestamp": {
            "type": "string",
            "format": "date-time"
          },
          "unfulfilledClauses": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/SubscriptionClause"
            },
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "DeliveryStatus": {
        "enum": [
          "Pending",
          "Success",
          "Failed",
          "Timeout",
          "ClauseFail"
        ],
        "type": "string"
      },
      "DeliveryTarget": {
        "type": "object",
        "properties": {
          "endpoint": {
            "type": "string"
          },
          "attempts": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/DeliveryAttempt"
            }
          }
        },
        "additionalProperties": false
      },
      "EventProcessSummary": {
        "type": "object",
        "properties": {
          "applicationName": {
            "type": "string"
          },
          "requestId": {
            "type": "string"
          },
          "eventType": {
            "type": "string"
          },
          "status": {
            "allOf": [
              {
                "$ref": "#/components/schemas/EventStatus"
              }
            ]
          },
          "deliveryTargets": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/DeliveryTarget"
            }
          }
        },
        "additionalProperties": false
      },
      "EventStatus": {
        "enum": [
          "Pending",
          "Processing",
          "Completed",
          "CompletedNoSubscribers"
        ],
        "type": "string"
      },
      "HttpValidationProblemDetails": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "nullable": true
          },
          "title": {
            "type": "string",
            "nullable": true
          },
          "status": {
            "type": "integer",
            "format": "int32",
            "nullable": true
          },
          "detail": {
            "type": "string",
            "nullable": true
          },
          "instance": {
            "type": "string",
            "nullable": true
          },
          "errors": {
            "type": "object",
            "additionalProperties": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          }
        },
        "additionalProperties": { }
      },
      "ProblemDetails": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "nullable": true
          },
          "title": {
            "type": "string",
            "nullable": true
          },
          "status": {
            "type": "integer",
            "format": "int32",
            "nullable": true
          },
          "detail": {
            "type": "string",
            "nullable": true
          },
          "instance": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": { }
      },
      "SubscriptionClause": {
        "type": "object",
        "properties": {
          "path": {
            "type": "string"
          },
          "operator": {
            "allOf": [
              {
                "$ref": "#/components/schemas/ClauseOperator"
              }
            ]
          },
          "value": {
            "nullable": true
          },
          "required": {
            "type": "boolean"
          }
        },
        "additionalProperties": false
      },
      "SubscriptionDetail": {
        "type": "object",
        "properties": {
          "callbackUrl": {
            "type": "string"
          },
          "maxRetries": {
            "type": "integer",
            "format": "int32"
          },
          "timeoutInSeconds": {
            "type": "integer",
            "format": "int32"
          },
          "clauses": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/SubscriptionClause"
            }
          }
        },
        "additionalProperties": false
      },
      "SubscriptionDetailPaginatedList": {
        "type": "object",
        "properties": {
          "items": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/SubscriptionDetail"
            }
          },
          "pageNumber": {
            "type": "integer",
            "format": "int32"
          },
          "totalPages": {
            "type": "integer",
            "format": "int32",
            "readOnly": true
          },
          "totalCount": {
            "type": "integer",
            "format": "int32",
            "readOnly": true
          },
          "hasPreviousPage": {
            "type": "boolean",
            "readOnly": true
          },
          "hasNextPage": {
            "type": "boolean",
            "readOnly": true
          }
        },
        "additionalProperties": false
      }
    },
    "securitySchemes": {
      "ApiKey": {
        "type": "apiKey",
        "description": "Please enter the api key",
        "name": "Api-Key",
        "in": "header"
      }
    }
  },
  "security": [
    {
      "ApiKey": [ ]
    }
  ]
}